.row
  .col-sm-4
    %h1 博文列表- 我喝茶 

  .col-sm-2{style: "margin-top:25px;"}
    %form.form-horizontal.right{action: "/blogs/octopress_generate", method: "post"}
      %input.btn.btn-default.btn-success{type: "submit", value: "生成静态博文"}

  .col-sm-6{style: "margin-top:25px;"}
    =link_to "创建博文", "javascript:void(0);", class: "btn btn-default right", "data-toggle" => "modal", "data-target" => "#myModal"

:css
  .table thead th, .table tbody td {text-align: left;}
  .btn { padding: 1px 6px; } // .table .btn .glyphicon
%table.table.table-condensed
  %thead
    %tr
      %th 标题 
      %th 分类 
      %th{style: "width:10px;"} 查看 
      %th{style: "width:10px;"} 编辑 
      %th{style: "width:10px;"} 删除 
  %tbody
    - @markdowns.each do |markdown|
      - title, categories = octopress_parse(@post_path, markdown)
      %tr
        %td= title
        %td= categories 
        %td
          %a.btn.btn-default.btn-link{href:"/blogs/show?post=#{markdown}", "data-toggle" => "tooltip", "data-original-title" => "查看博文[#{title}]"}
            %span.glyphicon.glyphicon-eye-open
        %td
          %a.btn.btn-default.btn-link{href:"/blogs/edit?post=#{markdown}", "data-toggle" => "tooltip", "data-original-title" => "编辑博文[#{title}]"}
            %span.glyphicon.glyphicon-edit
        %td
          %a.btn.btn-default.btn-link{onclick:"Blog.removeBlog('#{markdown}')", "data-toggle" => "tooltip", "data-original-title" => "删除博文[#{title}]", rel: "nofollow"}
            %span.glyphicon.glyphicon-trash

/ Modal
#myModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content#myModalContent
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
        %h4#myModalLabel.modal-title 创建博文
      .modal-body{style: "min-height:70px;"}
        %form.form-horizontal{"accept-charset" => "UTF-8", :action => "/blogs/create", :method => "post", style: "width:70%;display:inline;"}
          %input.form-control{name: "title", value: "", type: "text", placeholder: "博文标题", style: "width:70%;display:inline;", onchange: "Blog.inputMonitor(this, '#btnSubmit');", onkeyup: "Blog.inputMonitor(this, '#btnSubmit');", input: "Blog.inputMonitor(this, '#btnSubmit');" }
          %input#btnSubmit.btn.btn-primary{type: "submit", disabled: "disabled"}
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close

/ Modal
#myModal2.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content#myModalContent2
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
        %h4#myModalLabel2.modal-title 删除博文
      .modal-body{style: "min-height:70px;"}
        %form.form-horizontal{"accept-charset" => "UTF-8", action: "/blogs/remove", method: "post", style: "width:70%;display:inline;"}
          %input{type: "hidden", name: "_method", value: "delete"}
          %input.form-control{name: "post", value: "", type: "text", placeholder: "博文标题", style: "width:70%;display:inline;text-decoration:line-through;", readonly: "readonly"}
          %input.btn.btn-primary{type: "submit"}
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close



= javascript_include_tag "/javascripts/blog.js"
